{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "",
    "width": 850,
    "height": 500,

    "data":{"url": "https://raw.githubusercontent.com/RuiEnKoe/FIT3179_DataVisualisation2/refs/heads/main/data/bts_tour_con_revenue.csv"},

    "params": [
        {
            "name": "region_selection",
            "bind":
            {
                "input": "select",
                "options": 
                [
                    null,
                    "Asia", 
                    "Europe", 
                    "Latin America", 
                    "North America"
                ],
                "labels":
                [
                    "Show All",
                    "Asia", 
                    "Europe", 
                    "Latin America", 
                    "North America"
                ],
                "name": "Region "
            }
        },

        {
            "name": "tour_con_selection",
            "bind":
            {
                "input": "select",
                "options": 
                [
                    null,
                    "Love Yourself: Speak Yourself",
                    "Permission To Dance On Stage"
                ],
                "labels":
                [
                    "Show All",
                    "Love Yourself: Speak Yourself",
                    "Permission To Dance On Stage"
                ],
                "name": "Tour Name "
                
            }
        }
    ],

    "transform":[
        {
            "filter": "region_selection == null || datum.region == region_selection"
        },

        {
            "filter": "datum.tour_con_name == tour_con_selection || tour_con_selection == null"
        }
    ],

    "encoding":
    {
        "x":
        {
            "field": "num_tickets_sold",
            "type": "quantitative",
            "axis": 
            {
                "grid": false,
                "title": "Total Tickets Sold",
                "tickCount" : 3
            },
            "scale":
            {
                "type": "linear",
                "domain": [0, 150000]
            }
        },

        "y":
        {
            "field": "revenue_gained",
            "type": "quantitative",
            "axis": 
            {
                "title": "Total Revenue Gained (in USD)",
                "grid": false,
                "tickCount" : 3
            },
            "scale":
            {
                "type": "linear",
                "domain": [0, 20000000]
            }
            
        },

        "tooltip": [
            {
                "field": "tour_con_name",
                "type": "nominal",
                "title": "Tour Concert Name"
            },

            {
                "field": "year",
                "type": "ordinal",
                "title": "Year"
            },

            {
                "field": "city",
                "type" : "nominal",
                "title": "City"
            },

            {
                "field": "country",
                "type": "nominal",
                "title": "Country"
            },

            {
                "field": "region",
                "type": "nominal",
                "title": "Region"
            },

            {
                "field": "stadium",
                "type": "nominal",
                "title": "Stadium"
            },

            {
                "field": "num_tickets_sold",
                "type": "quantitative",
                "title": "Total tickets sold",
                "format": ","
            },

            {
                "field": "revenue_gained",
                "type": "quantitative",
                "title": "Total Revenue gained (in USD)",
                "format": ","
            },

            {
                "field": "stadium_audience_capacity",
                "type": "quantitative",
                "title": "Stadium Audience Capacity",
                "format": "," 
            }
        ] 
    },

    "layer":[

        {
            "params": [
                {
                "name": "region_highlight",
                "select": {
                    "type": "point",
                    "fields": ["region"],
                    "on": "click",
                    "encodings": ["color"]
                },
                "bind": "legend"
                }
            ],
            
            "mark": 
            {
                "type": "circle",
                "tooltip": true
            },

            "encoding": {

                "color":{
                    "field": "region",
                    "type": "nominal",
                    "title": "Region",
                    "scale": {
                        "range": ["#984ea3","#f768a1","#ff7f00","#a6cee3"],
                        "domain": [
                            "Asia", 
                            "Europe", 
                            "Latin America", 
                            "North America"
                        ]
                    }
                },
        
                "size":
                {
                    "field": "stadium_audience_capacity",
                    "type": "quantitative",
                    "title": "Stadium Audience Capacity",
                    "scale" : 
                    {
                        "type": "threshold",
                        "domain": [10000, 30000, 50000, 70000, 90000],
                        "range": [10, 50, 150, 250, 350, 600]
        
                    },
                    "legend" :{
                        "format" : ".1s"
                    }
                },

                "opacity": {
                    "condition":  
                        {
                            "param": "region_highlight",
                            "value": 0.6
                        },
                    "value": 0.2
                }
            }
        },

        {
            
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 9.5,
                "dy": 8.5,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },

            "encoding": {
                "text": {
                    "field": "city",
                    "type": "nominal"
                },

                "color":
                {
                    "value": "black"
                },

                "opacity": {
                    "condition":{
                        "test": "datum['city'] == 'Osaka'|| datum['city'] == 'Pasadena' || datum['city'] == 'Singapore' || datum['city'] == 'Bangkok' || datum['city'] == 'Seoul' || datum['city'] == 'Sao Paulo' || datum['city'] == 'London'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}