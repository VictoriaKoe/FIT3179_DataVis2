{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 950,
    "height": 700,
    "background": "#c8abfd",
    "projection": {"type": "equalEarth"},

    "data": {
      "url": "https://raw.githubusercontent.com/RuiEnKoe/FIT3179_DataVisualisation2/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson", 
        "feature": "ne_110m_admin_0_countries"
        }
    },

    "layer": [
        {
            "transform": [
                { 
                    "calculate": " 'Data is not available in ' + datum.properties.NAME", "as": "NaN_country"
                }
            ],
            "mark": {
                "type": "geoshape", 
                "fill": "lightgray", 
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {"field": "NaN_country"}
            }
        },

        {
            "data": {
                "url" :"https://raw.githubusercontent.com/RuiEnKoe/FIT3179-Week9-Homework/refs/heads/main/js/topoocean.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "topo_oceans"
                }
            },
            
            "mark": {
                "type": "geoshape", 
                "fill": "skyblue"
            }
        },

        {
            "data": {
                "url" : "https://raw.githubusercontent.com/RuiEnKoe/FIT3179_DataVisualisation2/refs/heads/main/js/WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape", 
                "fill": null, 
                "stroke": "lightgray"
            }

        },

        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/RuiEnKoe/FIT3179_DataVisualisation2/refs/heads/main/data/combined_bts_viewership.csv"
                        },

                        "key": "Country",
                        "fields": ["SpotifyML", "Youtubeviews","Instagramfollowers","Population", "InterestSearch"]
                    }
                },

                {
                    "calculate": "datum.Instagramfollowers/datum.Population * 10000", "as": "Instagram followers per 10,000 population"
                }

            ],
            
            "mark": {"type": "geoshape"},
            "encoding": {
                "color": {
                    "field": "Instagram followers per 10,000 population",
                    "type": "quantitative",
                    "title": "IG followers per 10,000 population",
                    "scale": {
                        "type": "threshold",
                        "domain":[100, 200, 300, 400],
                        "range": ["#f2f0f7", "#cbc9e2","#9e9ac8","#756bb1", "#6a51a3"]
                    }
                    
                },
                "tooltip": 
                [
                    {
                        "field": "properties.NAME", 
                        "type": "nominal", 
                        "title": "Country"
                    },

                    {
                        "field": "Instagramfollowers", 
                        "type": "quantitative",
                        "title": "Instagram followers"
                    },

                    {
                        "field": "Instagram followers per 10,000 population",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ]
            }
        },

        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/RuiEnKoe/FIT3179_DataVisualisation2/refs/heads/main/data/countryInfo.csv"
                        },

                        "key": "name",
                        "fields": ["latitude", "longitude"]
                    }
                },

                {
                    "filter": "datum.properties.NAME == 'South Korea' || datum.properties.NAME == 'United States' || datum.properties.NAME == 'Canada' || datum.properties.NAME == 'United States of America' ||  datum.properties.NAME == 'Indonesia' || datum.properties.NAME == 'Brazil' || datum.properties.NAME == 'Mexico'|| datum.properties.NAME == 'Russia' || datum.properties.NAME == 'Chile' || datum.properties.NAME == 'Malaysia' "
                }
            ],


            "mark": {
                "type": "text",
                "align": "right",
                "dx": -5,
                "dy": -11,
                "fontSize": 12
            },

            "encoding": {
                "color":
                {
                    "value": "black"
                },

                "text": {
                    "field": "properties.NAME",
                    "type": "nominal"
                },

                "longitude": {
                    "field": "longitude", "type": "quantitative"
                },

                "latitude": {
                    "field": "latitude", "type": "quantitative"
                }
            }
        }
    ]
}
    